<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_enabled="false"
         android:drawable="@drawable/button_disabled"/>

   <item  android:state_pressed="true">
      <shape android:shape="rectangle" >
         <corners
            android:radius="0dp"
            />
         <gradient
            android:angle="270"
            android:startColor="#FFE387"
            android:endColor="#FFA724"
            android:type="linear"
            />
         <stroke
            android:width="2dp"
            android:color="#856118"
            />
      </shape>
   </item>

   <item  android:state_focused="true">
      <shape android:shape="rectangle" >
         <corners
            android:radius="0dp"
            />
         <gradient
            android:angle="270"
            android:startColor="#FFE387"
            android:endColor="#FFA724"
            android:type="linear"
            />
         <stroke
            android:width="2dp"
            android:color="#856118"
            />
      </shape>
   </item>

   <item>
      <shape android:shape="rectangle" >
         <corners
            android:radius="0dp"/>
         <gradient
            android:angle="270"
            android:startColor="#FFC540"
            android:endColor="#F08705"
            android:type="linear"/>
         <stroke
            android:width="1dp"
            android:color="#E0A429"/>
      </shape>
   </item>
</selector>