<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_enabled="false"
         android:drawable="@drawable/button_disabled"/>

   <item  android:state_pressed="true">
      <shape android:shape="rectangle" >
         <corners
            android:radius="0dp"
            />
         <gradient
            android:angle="270"
            android:startColor="#E8E8E8"
            android:endColor="#A8A8A8"
            android:type="linear"
            />
         <stroke
            android:width="2dp"
            android:color="#757575"
            />

      </shape>
   </item>

   <item  android:state_focused="true">
      <shape android:shape="rectangle" >
         <corners
            android:radius="0dp"
            />
         <gradient
            android:angle="270"
            android:startColor="#E8E8E8"
            android:endColor="#A8A8A8"
            android:type="linear"
            />
         <stroke
            android:width="2dp"
            android:color="#757575"
            />
      </shape>
   </item>

   <item>
      <shape android:shape="rectangle" >
         <corners
            android:radius="0dp"
            />
         <gradient
            android:angle="270"
            android:startColor="#C4C4C4"
            android:endColor="#616161"
            android:type="linear"
            />
         <stroke
            android:width="1dp"
            android:color="#8F8F8F"
            />
      </shape>
   </item>
</selector>