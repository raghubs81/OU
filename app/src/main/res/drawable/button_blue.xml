<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_enabled="false"
         android:drawable="@drawable/button_disabled"/>

   <item  android:state_pressed="true">
      <shape android:shape="rectangle">
         <corners
            android:radius="6dp"/>
         <gradient
            android:angle="270"
            android:endColor="#2A6AFF"
            android:startColor="#47A8F5"
            android:type="linear"/>
         <stroke
            android:width="2dp"
            android:color="#FF7F27"/>
      </shape>
   </item>

   <item  android:state_focused="true">
      <shape android:shape="rectangle">
         <corners
            android:radius="6dp"/>
         <gradient
            android:angle="270"
            android:endColor="#2A6AFF"
            android:startColor="#47A8F5"
            android:type="linear"/>
         <stroke
            android:width="2dp"
            android:color="#FF7F27"/>
      </shape>
   </item>

   <item>
      <shape android:shape="rectangle">
         <corners
            android:radius="6dp"/>
         <gradient
            android:angle="270"
            android:endColor="#2A6AFF"
            android:startColor="#47A8F5"
            android:type="linear"/>
         <stroke
            android:width="2dp"
            android:color="#216FCC"/>
      </shape>
   </item>

</selector>