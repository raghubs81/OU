<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   tools:context="com.maga.ou.UserDetailFragment"
   android:id="@+id/fragment_group_detail"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:background="@color/bgLightPrimary"
   android:orientation="vertical">

   <TextView
      android:id="@+id/group_detail__name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/OU.Dark_Title1"
      android:text="Boys Group"/>

   <View style="@style/OU.Separator.H1"/>

   <TextView
      android:id="@+id/group_detail__detail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/OU.Dark_Detail1"
      android:text="A group of boys."
      />

   <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      style="@style/OU.Heading"
      android:text="@string/group_members"/>

   <GridLayout
      android:id="@+id/group_detail__user_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:columnCount="2"
      android:background="@color/borderLight">

      <!-- Layouts from segment_group_detail.xml have to be dynamically added here -->

   </GridLayout>


</LinearLayout>
