<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#808080"
    android:paddingBottom="10dp">

   <android.support.v7.widget.Toolbar
      android:id="@+id/single_fragment_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      />

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/border_shadow"
      android:paddingTop="4dp"
      android:paddingBottom="4dp"
      android:layout_marginTop="10dp"
      >

      <Button
         android:id="@+id/main_trip_add"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:textSize="24sp"
         android:textColor="#800000"
         android:textStyle="bold"
         android:text="@string/main_trip_add"
         android:gravity="top|center_horizontal"
         android:paddingTop="25dp"
         android:background="@drawable/bg_nature_sunset"
         android:textAllCaps="false"
         />
   </LinearLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/border_shadow"
      android:paddingTop="4dp"
      android:paddingBottom="4dp"
      android:layout_marginTop="10dp"
      android:clickable="true"
      >

      <Button
         android:id="@+id/main_trip_list"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:textSize="24sp"
         android:textColor="#004000"
         android:textStyle="bold"
         android:text="@string/main_trip_list"
         android:gravity="top|center_horizontal"
         android:paddingTop="25dp"
         android:background="@drawable/bg_nature_mountain"
         android:textAllCaps="false"
         />
   </LinearLayout>
    <!--
    <Button
        android:id="@+id/main_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Database"
        style="@style/OU.Button"/>
        -->

</LinearLayout>
