<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="horizontal"
   android:background="?android:attr/activatedBackgroundIndicator"
   android:minHeight="80dp"
   android:gravity="center"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin">

   <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="3">

      <TextView
         android:id="@+id/segment_item_payment_list__summary"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         style="@style/OU.Dark_Title2"
         android:text="Coffee at cafe coffee bar and ice-cream"
         android:maxLines="1"
         />

      <TextView
         android:id="@+id/segment_item_payment_list__detail"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         style="@style/OU.Dark_Detail1"
         android:text="These are the details of item. These are the details of item. These are the details of item. These are the details of item."
         android:maxLines="2"
         />

   </LinearLayout>

   <TextView
      android:id="@+id/segment_item_payment_list__amount"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:minWidth="150dp"
      android:gravity="right|center_vertical"
      style="@style/OU.Dark_Amount1"
      android:text="40000.00"/>

</LinearLayout>