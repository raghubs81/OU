<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="horizontal"
   android:background="@drawable/list_activated_background"
   android:minHeight="80dp"
   android:gravity="center"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin">

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
         android:id="@+id/segment_contact_list__contact_id"
         android:layout_width="0px"
         android:layout_height="0px"
         android:visibility="gone"
         />

      <TextView
         android:id="@+id/segment_contact_list__nickname"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:singleLine="true"
         style="@style/OU.Dark_Title2"
         android:text="Raghu"
         android:maxLines="1"
         />

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >

         <TextView
            android:id="@+id/segment_contact_list__fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            style="@style/OU.Dark_Detail1"
            android:text="Raghunandan Seshadri"
            android:layout_weight="1"
            android:maxLines="1"
            />

         <TextView
            android:id="@+id/segment_contact_list__mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/OU.Dark_Detail1"
            android:textColor="#606060"
            android:text="9880526030"
            />

      </LinearLayout>

   </LinearLayout>

</LinearLayout>