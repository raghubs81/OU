<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   tools:context="com.maga.ou.UserDetailFragment"
   android:id="@+id/fragment_user_detail"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:background="@color/bgLightPrimary"
   android:gravity="center"
   android:orientation="vertical">


   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical"
      android:background="@drawable/border_blue"
      android:padding="2dp"
      >

      <TextView
         android:id="@+id/user_detail__nick_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textSize="24sp"
         android:padding="4dp"
         android:background="#4285F4"
         android:textColor="@color/textLightPrimary"
         android:text="Raghu"
         />

      <TextView
         android:id="@+id/user_detail__full_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textSize="16dp"
         android:padding="2dp"
         android:background="#A6D2FF"
         android:text="Raghunandan Seshadri"
         />

      <GridLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:columnCount="2"
         android:paddingLeft="10dp"
         android:paddingRight="10dp">

         <TextView
            android:id="@+id/user_detail__mobile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:text="9880526030"
            android:layout_columnWeight="1"
            />

         <TextView
            android:id="@+id/user_detail__mobile_icon"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="C"
            />

         <TextView
            android:id="@+id/user_detail__email"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:text="raghubs81@gmail.com"
            android:layout_columnWeight="1"
            />

         <TextView
            android:id="@+id/user_detail__email_icon"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="M"
            />

      </GridLayout>

   </LinearLayout>

</LinearLayout>